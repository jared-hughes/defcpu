{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./target/ts",

    "composite": true,

    "strictNullChecks": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "types": [],

    "target": "es2022",
    "module": "es2022",
    "lib": ["ES2024"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,

    "allowJs": true,

    "skipLibCheck": true
  }
}
